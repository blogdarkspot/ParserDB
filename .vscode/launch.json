    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "interface/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "cwd": "${workspaceFolder}/interface",
            "jinja": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit Test",
            "program": "${workspaceFolder}/build/tests/grammar_test",
            "args": [],
            "cwd": "${workspaceFolder}/data",
            "console": "integratedTerminal"
            
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit Test Debug",
            "program": "${workspaceFolder}/build/tests/grammar_test",
            "args": [],
            "cwd": "${workspaceFolder}/data",
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "benchmark",
            "program": "${workspacefolder}/build/benchmark/lexic_unit_benchmark",
            "args": [],
            "cwd": "${workspacefolder}/data"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "benchmark debug",
            "program": "${workspaceFolder}/build/benchmark/lexic_unit_benchmark",
            "args": [],
            "prelaunchtask": "Build Debug"
        }
    ]
}